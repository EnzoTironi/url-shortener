      "@comment": "IAM - Auth Module",
      "endpoint": "/auth/token",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "api/auth/login",
          "host": [
            "http://iam:3001"
          ],
          "extra_config": {
            "modifier/martian": {
              "header.Modifier": {
                "scope": [
                  "request"
                ],
                "name": "x-api-key",
                "value": "your_api_key"
              }
            },
            "backend/http": {
              "return_error_details": "code"
            }
          }
        }
      ],
      "extra_config": {
        "auth/signer": {
          "alg": "RS256",
          "kid": "kid1",
          "keys_to_sign": [
            "access_token"
          ],
          "jwk_local_path": "./certs/private.json",
          "disable_jwk_security": true
        }
      }
