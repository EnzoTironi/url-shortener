# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build url-shortener`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t url-shortener`.
FROM node:18-alpine

WORKDIR /app

# Copy configuration files
COPY package*.json ./
COPY nx.json ./
COPY tsconfig*.json ./

# Copy source code
COPY apps ./apps
COPY libs ./libs

# Install dependencies
RUN npm ci

COPY . .

# Generate Prisma Client
RUN npx prisma generate --schema=./libs/prisma-url/prisma/schema.prisma

# Run nx reset to clear cache
RUN npx nx reset

# Build the app
RUN npx nx build url-shortener --verbose

# Expose port
EXPOSE 3002

# Start the app
CMD ["node", "dist/apps/url-shortener/main.js"]
